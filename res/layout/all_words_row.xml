<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wordRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/wordblock_border"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@+id/shownWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:text="word"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMeaning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvWord"
            android:layout_alignLeft="@+id/tvWord"
            android:layout_alignRight="@+id/tvWord"
            android:layout_alignStart="@+id/tvWord"
            android:layout_below="@+id/tvWord"
            android:text="meaning"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/expandedOptions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeaning"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/imageEditWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/imageDeleteWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_action_discard" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etModifyWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10" />

        <EditText
            android:id="@+id/etModifyMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etModifyWord"
            android:ems="10"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etModifyMeaning"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/iReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_action_refresh" />

            <ImageButton
                android:id="@+id/iUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_action_accept" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>