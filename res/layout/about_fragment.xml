<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="app.wordsforgre.home.MainActivity$AboutFragment" >

        <TextView
            android:id="@+id/disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="*****\nHello!\n\nThis app is still under Alpha testing. If you come across bugs, then please let me know. If you have got any inputs on the enhancement of it, then I will be happy to hear about it.\n\nCheers! I hope you have a good time here! :)\n\n*****"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/disclaimer"
            android:layout_alignLeft="@+id/disclaimer"
            android:layout_alignRight="@+id/disclaimer"
            android:layout_alignStart="@+id/disclaimer"
            android:layout_below="@+id/disclaimer"
            android:text="@string/app_name_and_version"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/header"
            android:layout_alignLeft="@+id/header"
            android:layout_alignRight="@+id/header"
            android:layout_alignStart="@+id/header"
            android:layout_below="@+id/header"
            android:text="+ quiz of all the words\n+ view all words\n+ delete words\n+ search word\n"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/header_future_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/update_info"
            android:layout_alignLeft="@+id/update_info"
            android:layout_alignRight="@+id/update_info"
            android:layout_alignStart="@+id/update_info"
            android:layout_below="@+id/update_info"
            android:text="> Intended enhancements in future"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/future_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/header_future_notes"
            android:layout_alignLeft="@+id/header_future_notes"
            android:layout_alignRight="@+id/header_future_notes"
            android:layout_alignStart="@+id/header_future_notes"
            android:layout_below="@+id/header_future_notes"
            android:text="+ edit word and meaning\n+ add notes to a word\n+ link synonyms and antonyms of the word"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</ScrollView>