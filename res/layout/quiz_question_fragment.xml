<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/wordsforgre_small_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvQuizWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/wordsforgre_small_margin"
        android:layout_toLeftOf="@+id/tvQuizWordCategory"
        android:gravity="center_vertical"
        android:text="Impertinent"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp" />
    <Button
        android:id="@+id/bQuizCheckMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvQuizWord"
        android:text="Check the meaning" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bQuizCheckMeaning" >

    </com.github.mikephil.charting.charts.PieChart>

    <!-- <TextView
        android:id="@+id/tvQuizWordCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvQuizWord"
        android:text="Word type"
        android:textAppearance="?android:attr/textAppearanceMedium" /> -->
    
</RelativeLayout>
