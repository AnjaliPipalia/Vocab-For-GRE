<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wordsforgre.landing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="wordsforgre.about.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wordsforgre.landing.MainActivity" />
        </activity>
        <activity
            android:name="wordsforgre.allwords.AllWordsActivity"
            android:label="@string/title_activity_all_words"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wordsforgre.landing.MainActivity" />
        </activity>
        <activity
            android:name="wordsforgre.quiz.QuizActivity"
            android:label="@string/title_activity_quiz" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wordsforgre.landing.MainActivity" />
        </activity>
        <activity
            android:name="wordsforgre.utils.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>